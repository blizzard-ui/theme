{
  "name": "@blizzard-ui/theme",
  "version": "0.1.0",
  "description": "React Native Theme",
  "main": "lib/commonjs/index",
  "module": "lib/module/index",
  "types": "lib/typescript/src/index.d.ts",
  "react-native": "src/index",
  "source": "src/index",
  "files": [
    "src",
    "lib",
    "android",
    "ios",
    "cpp",
    "*.podspec",
    "!lib/typescript/example",
    "!ios/build",
    "!android/build",
    "!android/gradle",
    "!android/gradlew",
    "!android/gradlew.bat",
    "!android/local.properties",
    "!**/__tests__",
    "!**/__fixtures__",
    "!**/__mocks__",
    "!**/.*"
  ],
  "scripts": {
    "test": "jest",
    "typecheck": "tsc --noEmit",
    "lint": "eslint ./src -c \".eslintrc\"",
    "clean": "del-cli lib",
    "prepack": "bob build",
    "release": "release-it",
    "example": "yarn workspace @blizzard-ui/theme-example"
  },
  "keywords": [
    "react-native",
    "ios",
    "android"
  ],
  "repository": "https://github.com/krishna-gujjjar/blizzard-ui-theme",
  "author": "Krishna Gujjjar <krishnagujjjar@gmail.com> (https://github.com/krishna-gujjjar)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/krishna-gujjjar/blizzard-ui-theme/issues"
  },
  "homepage": "https://github.com/krishna-gujjjar/blizzard-ui-theme#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^17.7.0",
    "@evilmartians/lefthook": "^1.5.0",
    "@react-native/eslint-config": "^0.72.2",
    "@release-it/conventional-changelog": "^5.1.1",
    "@types/jest": "^28.1.8",
    "@types/react": "~17.0.65",
    "@types/react-native": "0.70.14",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "commitlint": "^17.7.1",
    "del-cli": "^5.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.10.0",
    "eslint-config-standard-with-typescript": "latest",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-jest": "^27.4.0",
    "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-promise": "^6.0.0",
    "eslint-plugin-react": "latest",
    "jest": "^28.1.3",
    "pod-install": "^0.1.39",
    "prettier": "^2.8.8",
    "react": "18.2.0",
    "react-native": "0.72.4",
    "react-native-builder-bob": "^0.20.4",
    "release-it": "^15.11.0",
    "typescript": "*"
  },
  "resolutions": {
    "@types/react": "17.0.21"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*"
  },
  "workspaces": [
    "example"
  ],
  "packageManager": "yarn@3.6.1",
  "engines": {
    "node": ">= 18.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release ${version}",
      "tagName": "v${version}"
    },
    "npm": {
      "publish": true
    },
    "github": {
      "release": true
    },
    "plugins": {
      "@release-it/conventional-changelog": {
        "preset": "angular"
      }
    }
  },
  "react-native-builder-bob": {
    "source": "src",
    "output": "lib",
    "targets": [
      "commonjs",
      "module",
      [
        "typescript",
        {
          "project": "tsconfig.build.json"
        }
      ]
    ]
  }
}
